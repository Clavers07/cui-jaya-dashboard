<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Database" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Database" parent="Base.Theme.Database" />
    <style name="back_with_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:drawableStart">@drawable/chevron_left</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:background">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/ios_blue</item>

    </style>
    <style name="back">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:drawableStart">@drawable/chevron_left</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:background">@null</item>
    </style>
</resources>