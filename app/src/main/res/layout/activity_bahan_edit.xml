<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".bahan.BahanEdit"
    android:background="@color/sec_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/kembali"
            style="@style/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengeluaran"
            android:textAlignment="center"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/main_font"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/main_bg"
        android:background="@drawable/bg_bahan"
        android:padding="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/btn_radius_6"
            android:backgroundTint="@color/sec_bg"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="64dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID :"
                android:textColor="@color/main_font"
                android:fontFamily="@font/inter"
                android:textSize="16dp"/>

            <EditText
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/inter"
                android:textColor="@color/main_font"
                android:backgroundTint="@color/fills"
                android:background="@drawable/bg_input" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pengeluaran :"
                android:textColor="@color/main_font"
                android:fontFamily="@font/inter"
                android:textSize="16dp"/>

            <EditText
                android:id="@+id/namaBahan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp"
                android:hint="Pengeluaran untuk barang.."
                android:textColor="@color/main_font"
                android:backgroundTint="@color/fills"
                android:background="@drawable/bg_input" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nilai:"
                android:textColor="@color/main_font"
                android:fontFamily="@font/inter"
                android:textSize="16dp"/>

            <EditText
                android:id="@+id/harga"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp"
                android:hint="contoh 10000"
                android:textColor="@color/main_font"
                android:backgroundTint="@color/fills"
                android:background="@drawable/bg_input"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ubah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UBAH"
                android:backgroundTint="@color/sec_bg"
                android:textColor="@color/ios_blue"
                android:textSize="20dp"
                android:fontFamily="@font/inter"
                android:background="@drawable/button_save"
                android:layout_marginBottom="10dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kembali"
                android:backgroundTint="@color/sec_bg"
                android:textColor="@color/main_font"
                android:fontFamily="@font/inter"
                android:background="@drawable/button_back"
                android:textSize="20dp"/>

        </LinearLayout>



    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>